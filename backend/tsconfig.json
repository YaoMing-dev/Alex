{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [
      "node",
      "express"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}