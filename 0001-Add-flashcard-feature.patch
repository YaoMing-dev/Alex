+    }
+
+    // Create card
+    const newCard = await prisma.userFlashcardCards.create({
+      data: {
+        set_id: setId,
+        vocab_id: data.vocab_id,
+        status: data.status || 'new',
+      },
+      include: {
+        vocab: true,
+      },
+    });
+
+    return newCard;
+  }
