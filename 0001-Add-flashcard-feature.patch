+
+    if (!set) {
+      throw new AppError('Flashcard set not found or unauthorized', 404);
+    }
+
+    const updatedCard = await prisma.userFlashcardCards.update({
+      where: {
+        set_id_vocab_id: {
+          set_id: setId,
+          vocab_id: vocabId,
+        },
+      },
+      data: { status },
+      include: {
+        vocab: true,
+      },
+    });
+
+    return updatedCard;
+  }
