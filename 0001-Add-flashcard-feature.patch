+      where: { id: data.vocab_id },
+    });
+
+    if (!vocab) {
+      throw new AppError('Vocabulary not found', 404);
+    }
+
+    // Check if card already exists
+    const existingCard = await prisma.userFlashcardCards.findUnique({
+      where: {
+        set_id_vocab_id: {
+          set_id: setId,
+          vocab_id: data.vocab_id,
+        },
+      },
+    });
+
+    if (existingCard) {
